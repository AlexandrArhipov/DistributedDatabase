@{
    ViewData["Title"] = "CharacterForm";
}
<h1>Создание персонажа</h1>
<form method="post">
  <div class="form-group">
    <div class="form-group row">
      <label for="name-input" class="col-sm-1 col-form-label">Имя</label>
      <div class="col-sm-5">
        <input class="form-control" type="text" name="name" placeholder="Введите имя персонажа" id="name-input" required>
      </div>
    </div>
    <div class="form-group row">
      <label for="sex-select" class="col-sm-1 col-form-label">Пол</label>
      <div class="col-sm-2">
        <select class="form-control" name="sex" id="sex-select" required>
          <option value="M">Мужской</option>
          <option value="F">Женский</option>        
        </select>
      </div>
    </div>
    <div class="form-group row">
      <label for="skin-select" class="col-sm-1 col-form-label">Цвет кожи</label>
      <div class="col-sm-2">
        <select class="form-control" name="skin" id="skin-select" required>
          <option value="Black">Черный</option>
          <option value="White">Белый</option>        
          <option value="Green">Зеленый</option>        
          <option value="Red">Красный</option>        
        </select>
      </div>
    </div>
    <div class="form-group row">
      <label for="height-input" class="col-sm-1 col-form-label">Рост</label>
      <div class="col-sm-1">
        <input class="form-control" type="number" name="height" placeholder="00" id="height-input" required>
      </div>
    </div>
    <div class="form-group row">
      <label for="weight-input" class="col-sm-1 col-form-label">Вес</label>
      <div class="col-sm-1">
        <input class="form-control" type="number" name="weight" placeholder="00" id="weight-input" required>
      </div>
    </div>
    <div class="form-group row">
      <label for="class-select" class="col-sm-1 col-form-label">Класс</label>
      <div class="col-sm-2">
        <select class="form-control" name="class" id="class-select" required>
          <option value="Healer">Лечильщик</option>       
        </select>
      </div>
    </div>
    <div class="form-group row">
      <label for="race-select" class="col-sm-1 col-form-label">Расса</label>
      <div class="col-sm-2">
        <select class="form-control" name="race" id="race-select" requireds>
          <option value="Nord">Норд</option>        
        </select>
      </div>
    </div>
  </div>
  <button type="submit" class="btn btn-primary">Отправить</button>
  </form>


