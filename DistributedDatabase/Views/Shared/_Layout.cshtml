<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DistributedDatabase</title>
    
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>

        @RenderSection("DevelopmentEnvironment", required: false)
    </environment>
    <environment exclude="Development">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>

    @RenderSection("Environment", required: false)
</environment>
    
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a asp-area="" asp-controller="Form" asp-action="UserForm">Регистрация нового пользователя</a></li>
                    <li><a asp-area="" asp-controller="Form" asp-action="CharacterForm">Создание нового персонажа</a></li>
                    <li><a asp-area="" asp-controller="Visualization" asp-action="Users">Пользователи</a></li>
                    <li><a asp-area="" asp-controller="Visualization" asp-action="Characters">Персонажи</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2018 - Удалов А.Д., Архипов А.Н. - ИКБО-01-15</p>
        </footer>
    </div>
    @RenderSection("Scripts", required: false)
</body>
</html>
